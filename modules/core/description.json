{
  "module": "core",
  "version": "1.0",
  "isSingleton": true,
  "scripts": [
    {
      "file": "install.sh",
      "aliases": ["install"],
      "isInstallScript": true,
      "params": ["hostname", "git-username", "git-email", "git-url",
                 "ulimit-hard:1048576", "ulimit-soft:1048576", "ulimit-systemd:262144"]
    },
    {
      "file": "purge.sh",
      "aliases": ["purge", "uninstall"],
      "dependencies": ["core-version"]
    },
    {
      "file": "update.sh",
      "aliases": ["update"],
      "params": ["branch"],
      "dependencies": ["core-version"]
    }
  ]
}
